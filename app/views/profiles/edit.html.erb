<h1>Update public profile</h1>

<%= form_for(@profile, :url => user_profile_path(current_user), :method => :post) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, :class => "text ui-widget-content ui-corner-all" %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email, :class => "text ui-widget-content ui-corner-all" %>
  </div>
  <div class="field">
    <%= f.label :location %><br />
    <%= f.text_field :location, :class => "text ui-widget-content ui-corner-all" %>
  </div>
  <div class="field">
    <%= f.label :website %><br />
    <%= f.text_field :website, :class => "text ui-widget-content ui-corner-all" %>
  </div>
  <div class="actions">
    <%= f.submit "Update public profile" %>
  </div>
<% end %>

<% content_for :sidebar do %>
  <%= render 'shared/settings_menu' %>
<% end %>