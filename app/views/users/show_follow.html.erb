<table summary="Information about following/followers">
  <tr>
    <td class="main">
    <h1><%= @title %></h1>
    <% unless @users.empty? %>
    <ul class="users">
      <%= render @users %>
    </ul>
    <%= paginate @users %>
    <% end %>
    </td>
    <td class="sidebar round">
    <%= render 'shared/sidebar' %>
    <% unless @users.empty? %>
    <% @users.each do |user| %>
    <%= link_to gravatar_for(user, :size => 30), user %>
    <% end %>
    <% end %>
    </td>
  </tr>
</table>