<tr class="show-close-button">
  <td class="micropost">
    <span class="content"><%= micropost.content %> on <%= micropost.reminder_date %></span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    </span>
  </td>
  <% if current_user?(micropost.user) %>
  <td class="micropost">
    <div class="hover ui-state-default ui-corner-all icon-button invisible" style="float: right;">
        <%= link_to "delete", micropost, :method => :delete,
                                         :confirm => "You sure?",
                                         :title => "Remove post",
                                         :class => "ui-icon ui-icon-close"%>
    </div>
  </td>
  <% end %>
</tr>

