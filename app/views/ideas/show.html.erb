<h1 class="idea">Remind me to</h1>
<div class="title"><%= @idea.content %></div>
<div class="span9">
  <span class="idea-toolbar">
    <%= link_to "Create new reminder", remind_me_too_path(:idea_id => @idea.id), :remote => true %> 
  </span>  Â· 
  <span class="idea-toolbar">
    <%= link_to "Users sharing this idea", users_idea_path(@idea) %> 
  </span>
</div>
<div class="span9">on</div>
<div class="span9" id="table-div">
  <%= render 'reminders/simple_table' %>
</div>

<div class="span9">
  The idea is part of the following lists:  
  <%= form_for @idea do |f| %>
    <%= f.text_field :idea_list_tokens, "data-pre" => @idea.idea_lists.map(&:attributes).to_json %>
    <br/>
    <%= f.submit "Update lists" %>
  <% end %>
</div>

<%= render 'shared/remind_me_too_dialog' %>

<% content_for :sidebar do %>
  <%= render 'shared/sidebar' %>
<% end %>