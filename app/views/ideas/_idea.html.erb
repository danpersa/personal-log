<div class="show-close-button row idea-row" id="idea_<%= idea.id %>">
  <div class="row-content">
    <div><%= idea.content %></div>
    <div class="timestamp">Created <%= time_ago_in_words(idea.created_at) %> ago</div>
  </div>
  <div class="buttons">
    <% if current_user?(idea.user) %>
      <div class="hover ui-state-default ui-corner-all icon-button invisible" style="float: left;">
        <%= link_to "destroy", idea, :method => :delete,
                                     :confirm => "You sure?",
                                     :title => "Remove idea",
                                     :class => "ui-icon ui-icon-close" ,
                                     :remote => true %>
      </div>
      <div class="hover ui-state-default ui-corner-all icon-button invisible" style="float: right;">
        <%= link_to "show", idea, :method => :get, :class => "ui-icon ui-icon-search" %>
      </div>
    <% end %>
  </div>
</div>