<tr id="feed-item-<%=feed_item.id%>">
  <td class="gravatar">
    <%= link_to gravatar_for(feed_item.user), feed_item.user %>
  </td>
  <td class="micropost">
    <span class="user">
      <%= link_to feed_item.user.name, feed_item.user %>
    </span>
    <span class="content">wants to remind to <%= feed_item.content %> on <%= feed_item.reminder_date %></span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
    </span>
  </td>
  <% if current_user?(feed_item.user) %>
  <td class="micropost">
    <%= link_to "delete", feed_item, :method => :delete,
                                     :confirm => "You sure?",
                                     :title => feed_item.content, 
                                     :remote => true %>
    <%= feed_item.privacy.name %>
  </td>
  <% else %>
  <td class="micropost"></td>
  <% end %>
</tr>
