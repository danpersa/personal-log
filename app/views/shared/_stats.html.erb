<div class="stats row">
  <div class="span2 following">
    <a href="<%= following_user_path(@user) %>">
      <span id="following" class="stat"><%= @user.following.count %> following</span>
    </a>
  </div>
  <div class="span2 followers">
    <a href="<%= followers_user_path(@user) %>">
      <span id="followers" class="stat"><%= pluralize(@user.followers.count, "follower") %></span>
    </a>
  </div>
</div>
<br/>
