<%= form_for @micropost do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.text_area :content %>
  </div>
  <span class="title">on</span>
  <span class="field">
    <%= f.date_select(:reminder_date, options = {:start_year => Time.now.year } )%>
  </span>
  <span class="title">as</span>
  <span class="field">
    <%= f.collection_select(:privacy_id, Privacy.all, :id, :name) %>
  </span>
  <span class="actions">
    <%= f.submit "Post" %>
  </span>
<% end %>
