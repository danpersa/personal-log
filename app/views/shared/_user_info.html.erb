<div class="user-info">
  <a href="<%= user_path(@user) %>">
    <span class="gravatar">
      <%= gravatar_for @user, :size => 40 %>
    </span>
    <span class="display-name">
      <%= @user.display_name %>
    </span>
  </a>
  <div class="ideas-count">
    <a href="<%= user_path(@user) %>">
      <div class="ideas">
        <%= pluralize(@user.ideas.count, "idea") %>
      </div>
    </a>
  </div>
</div>
