<div class="user_info">
  <a href="<%= user_path(@user) %>">
    <%= gravatar_for @user, :size => 30 %>
    <span class="user_name">
      <%= @user.display_name %>
    </span>
  </a>
  <a href="<%= user_path(@user) %>">
    <div class="ideas">
      <%= pluralize(@user.ideas.count, "idea") %>
    </div>
  </a>
</div>
