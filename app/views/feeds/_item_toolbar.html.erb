<% unless idea.shared_by?(current_user) %>
  <%= link_to "Remind me too", remind_me_too_from_location_path(:idea_id => idea.id, :location => remind_me_too_location), :remote => true %> 路
<% else %>
  <%= link_to "Create new reminder", remind_me_too_from_location_path(:idea_id => idea.id, :location => remind_me_too_location), :remote => true %> 路
<% end %>
  
<% if current_user.marked_as_good?(idea) %>
  <b><%= link_to "Good idea!", good_idea_path(:id => idea.id), :method => :delete, :remote => true %></b>
<% else %>
  <%= link_to "Good idea", good_idea_create_path(:id => idea.id), :method => :post, :remote => true %>
<% end %>
(<%= idea.good_ideas.count %>) 路 
<% if current_user.marked_as_done?(idea) %>
  <b><%= link_to "I did this!", done_idea_path(:id => idea.id), :method => :delete, :remote => true %></b>
<% else %>
  <%= link_to "I did this", done_idea_create_path(:id => idea.id), :method => :post, :remote => true %>
<% end %>
(<%=  idea.done_ideas.count %>) 路 