$("#remind_me_too_dialog").attr("title", "<%= escape_javascript(@title) %>");
$("#remind_me_too_dialog").html("<%= escape_javascript(render(:partial => "form"))%>");
$("#remind_me_too_dialog").dialog({
    autoOpen: false,
    height: 400,
    width: 460,
    modal: true,
    resizable: false,
    buttons: {
      "<%= submit_button_name %>": function() {
        $("#new_reminder").submit();
      },
      Cancel: function() {
        $(this).dialog("close");
      }
    },
    close: function() {
      $(this).dialog("destroy");
    }
  });
$("#remind_me_too_dialog").dialog("open");
$("#reminder_reminder_date").datepicker({
    dateFormat: 'dd/mm/yy',
    minDate: new Date()
});
$("#reminder_privacy_id").selectmenu({
    transferClasses: true,
    style: "dropdown",
    width: 100,
    menuWidth: 100
});