<tr class="show-close-button" id="reminder_<%= simple_reminder.id %>">
  <td class="item">
    <span class="content"><%= simple_reminder.reminder_date %></span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(simple_reminder.created_at) %> ago.
    </span>
  </td>
  <% if current_user?(simple_reminder.user) %>
  <td class="item">
    <div class="hover ui-state-default ui-corner-all icon-button invisible" style="float: right;">
        <%= link_to "delete", simple_reminder, :method => :delete,
                                               :confirm => "You sure?",
                                               :title => "Remove reminder",
                                               :class => "ui-icon ui-icon-close",
                                               :remote => true %>
    </div>
  </td>
  <% end %>
</tr>