<div class="show-close-button row reminder-row" id="simple_reminder_<%= simple_reminder.id %>">
  <div class="row-content">
    <div>on <%= simple_reminder.reminder_date %></div>
    <div class="timestamp">Posted <%= time_ago_in_words(simple_reminder.created_at) %> ago as <%= simple_reminder.privacy.name %></div>
  </div>
  <div class="buttons">
    <% if current_user?(simple_reminder.user) %>
      <div class="hover ui-state-default ui-corner-all icon-button invisible" style="float: right;">
        <%= link_to "delete", simple_reminder, :method => :delete,
                                               :confirm => "You sure?",
                                               :title => "Remove reminder",
                                               :class => "ui-icon ui-icon-close",
                                               :remote => true %>
      </div>
    <% end %>
  </div>
</div>