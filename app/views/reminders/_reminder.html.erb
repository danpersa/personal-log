<div class="show-close-button row reminder-row" id="reminder_<%= reminder.id %>">

  <div class="row-content">
    <div><%= reminder.idea.content %> on <%= reminder.reminder_date %></div>
    <div class="timestamp">Posted <%= time_ago_in_words(reminder.created_at) %> ago as <%= reminder.privacy.name %></div>
    <% if signed_in? %>
      <div class="toolbar" id="item_toolbar_<%= reminder.id %>">
        <%= render :partial => 'reminders/item_toolbar', :locals => {:idea => reminder.idea} %>
      </div>
    <% end %>
  </div>
  <div class="buttons">
    <% if current_user?(reminder.user) %>
      <div class="hover ui-state-default ui-corner-all icon-button invisible" style="float: right;">
        <%= link_to "delete", reminder, :method => :delete,
          :confirm => "You sure?",
          :title => "Remove reminder",
          :class => "ui-icon ui-icon-close",
          :remote => true %>
      </div>
    <% end %>
  </div>
</div>
