<%= form_for(@idea_list, :remote => remote?) do |f| %>
<fieldset>
  <%= f.label :name, "Name" %>
  <%= f.text_field(:name, :class => "text ui-widget-content ui-corner-all")  %>
  <%= errors_for_field(@idea_list, :name) %>
  <% unless hide_buttons? %>
  <%= f.submit %>
  <% end %>
</fieldset>
<% end %>