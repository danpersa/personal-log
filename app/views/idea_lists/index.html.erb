<h1>My idea lists</h1>

<button id="create-idea-list">Create new idea list</button>
<p/>
<%= will_paginate %>
<ul class="idea-list" id="idea-list">
  <%= render @idea_lists %>
</ul>
<%= will_paginate %>

<div id="dialog-form" title="Create new idea list">
  <%= form_for(@idea_list, :remote => true) do |f| %>
  <fieldset>
    <%= f.hidden_field :id %>
    <%= f.label :name, "Name" %>
    <%= f.text_field(:name, :class => "text ui-widget-content ui-corner-all")  %>
    <div id="name_errors" class="errors"></div>
  </fieldset>
  <% end %>
</div>

<div id="edit-idea-list-dialog-form" title="Edit idea list">

  <%= form_tag({:controller => :idea_lists, :action => :update}, {:class => "edit_idea_list", :id => "edit_idea_list" }) do %>
  <fieldset>
    <%= hidden_field :edit_idea_list, :id %>
    <%= label :edit_idea_list, :name, "Name" %>
    <%= text_field :edit_idea_list, :name, :class => "text ui-widget-content ui-corner-all" %>
    <div id="edit_name_errors" class="errors"></div>
    <%= submit_tag "Post" %>
  </fieldset>  
<% end %>

</div>



